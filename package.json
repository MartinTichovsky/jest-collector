{
  "name": "jest-collector",
  "version": "1.0.1",
  "description": "A tool for testing imported functions and or React components and its hooks or lifecycles.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/MartinTichovsky/jest-collector"
  },
  "keywords": [
    "jest",
    "collector",
    "react",
    "hooks",
    "lifecycle",
    "testing"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "yarn build --watch",
    "clean": "rimraf tsconfig*.tsbuildinfo lib",
    "test": "jest --collect-coverage --colors --verbose",
    "tsc": "tsc --noEmit"
  },
  "author": "Martin Tichovsky",
  "license": "MIT",
  "private": false,
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@testing-library/dom": "8.7.2",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "jest": "27.2.5",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "jest": "26.x.x || 27.x.x"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      },
      "collector": null
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/__integration-tests__/**",
      "!**/__tests__/**",
      "!**/__tests-helper__/**"
    ],
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ]
  }
}
