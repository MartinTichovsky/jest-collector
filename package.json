{
  "name": "jest-collector",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "build:watch": "yarn build --watch",
    "clean": "rimraf tsconfig*.tsbuildinfo lib",
    "test": "jest --no-cache --silent --collect-coverage",
    "tsc": "tsc --noEmit"
  },
  "author": "Martin Tichovsky",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@testing-library/dom": "8.2.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/jest": "27.0.1",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "jest": "27.1.0",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.2"
  },
  "peerDependencies": {
    "react": "^17.x.x",
    "react-dom": "^17.x.x"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      },
      "collector": null
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/__integration-tests__/**",
      "!**/__tests__/**",
      "!**/__tests-helper__/**"
    ],
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ]
  }
}