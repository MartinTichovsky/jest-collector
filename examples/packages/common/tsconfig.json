{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
